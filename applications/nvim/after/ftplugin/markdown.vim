" after-hook for markdown
" FileType: markdown

setlocal wrap
setlocal linebreak
nnoremap <buffer> j gj
vnoremap <buffer> j gj
nnoremap <buffer> k gk
vnoremap <buffer> k gk
nnoremap <buffer> $ g$
vnoremap <buffer> $ g$
nnoremap <buffer> ^ g^
vnoremap <buffer> ^ g^
nnoremap <buffer> 0 g0
vnoremap <buffer> 0 g0
