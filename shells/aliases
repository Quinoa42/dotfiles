### Aliases for directories
alias wp="cd $WORKPATH"
alias dotf="cd $DOTFILES"

### other aliases
alias readme="nvim README.md"
alias v="nvim"
alias e="emacsclient -c --no-wait"
alias g="git"
alias mux="tmuxinator"
alias ls="exa"
alias l="exa --git-ignore"
alias l.="ls -lah"
alias mutt="offlineimap && (TERM=screen-256color neomutt) && offlineimap"
alias gc="git commit -v"
