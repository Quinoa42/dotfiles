XDG_CONFIG_HOME DEFAULT=@{HOME}/.config
XDG_DATA_HOME DEFAULT=@{HOME}/.local/share
# editor
VISUAL DEFAULT=nvim
EDITOR DEFAULT=${VISUAL}
# Some directories
DOTFILES DEFAULT=@{HOME}/.dotfiles
WORKPATH DEFAULT=@{HOME}/workspace
# languages' dirs
RUSTUP_HOME DEFAULT=@{HOME}/.rustup
TEXMFHOME DEFAULT=@{HOME}/.config/texmf
# PATH
PATH DEFAULT=@{HOME}/bin:@{HOME}/.cargo/bin:@{HOME}/.npm-global/bin:${PATH}

# fcitx
